<h1> Welcome to Unite to Buy It!<h1>
<h2>Log in.</h2>

<%= form_tag sessions_path, class: "centered" do %>
  <p>
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email] %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </p>
  <%= submit_tag "Log in", :class => "button-1-2 rounded-1" %>
<% end %>

<p class="padded centered">Don't have an account yet?</p>
<p class="centered"><%= link_to "Register here!", signup_path %></p>
